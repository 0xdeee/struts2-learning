<?xml version="1.0" encoding="UTF-8"?>
<!-- this doctype is imp to use the validation tags -->
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<!-- Move this to same path as RegistrationAction.java to use this validation xml -->
                
<validators>
<!-- 	"requiredstring" checks both that if string is null & if string is empty -->
	<validator type="requiredstring">
		<param name="fieldName">firstName</param>
		<message>First Name is Required</message>
	</validator>
	<validator type="requiredstring">
		<param name="fieldName">lastName</param>
		<message>Last Name is Required</message>
	</validator>
<!-- 	required checks only if that the field is empty -->
	<validator type="required">
		<param name="fieldName">gender</param>
		<message>Gender is Required</message>
	</validator>
	<validator type="required">
		<param name="fieldName">age</param>
		<message>Age is Required</message>
	</validator>
	<validator type="required">
		<param name="fieldName">age</param>
<!-- 		adding minimum acceptable value to the field can also add "max" -->
		<param name="min">18</param>
		<message>Age should be above ${min}</message>
	</validator>
<!-- 	<validator type="requiredstring"> -->
<!-- 		<param name="fieldName">email</param> -->
<!-- 		<message>Email is Required</message> -->
<!-- 	</validator> -->
<!-- 	"email" validates if the email entered is a valid one -->
<!-- 	<validator type="email"> -->
<!-- 		<param name="fieldName">email</param> -->
<!-- 		<message>Must provide a valid email</message> -->
<!-- 	</validator> -->
<!-- 	the above validators were commentec cuz they performed diff validations on same field -->
<!-- 	and in that case we can perform validations based field using <field> for better visual  -->
<!-- 	hierarchy - find that below -->
	
	<field name="email">
		<field-validator type="requiredstring">
			<message>Email is required</message>
		</field-validator>
		<field-validator type="email">
			<message>Must provide a valid email</message>
		</field-validator>
	</field>
</validators>